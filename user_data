LAMP:

#cloud-config

packages:
  - ansible
  - git

runcmd:
  - git clone https://github.com/roshanmaadhaiah/lampsetup.git /usr/local/src/
  - ansible-playbook /usr/local/src/Apache-yaml/lamp.yaml -c local
  
  
